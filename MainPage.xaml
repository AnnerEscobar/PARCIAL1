<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mi_Primera_App.MainPage">

    <StackLayout
                 Padding="10,10,10,10"
                 Margin="5,150,5,5"
                 Spacing="25"
               
                 >
        <Label Text="MATEJUEGOS" 
               FontSize="28"
               TextColor="Black"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center"></Label>


        <Button 
                    Text="ADIVINAR EL NUMERO"   
                    x:Name="boton1"
                    Clicked="boton1_Clicked"
                    Background="#C5CAE9" 
                    BorderColor="white"
                    BorderWidth="5"
                    FontSize="18"
                    CornerRadius="25"
                    VerticalOptions="Center"
                     />
        
        <Button Text="ADIVINAR TU FECHA"
                x:Name="boton2"
                Clicked="boton2_Clicked"
                Background="#C5CAE9"
                BorderColor="White"
                BorderWidth="5"
                FontSize="18"
                CornerRadius="25" />
        <Label Text="PROYECTO UMG- ANNER ESCOBAR PROGRA-1 2021" FontFamily="11" HorizontalTextAlignment="Center"/>


    </StackLayout>

</ContentPage>
